<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto mb-2">
      <a class="btn btn-outline-info btn-lg btn-block" href="/restaurants/new" role="button">新增一家餐廳</a>
    </div>
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div class="card mb-3">
          <a href="/restaurants/{{this.id}}" class="text-secondary">
            <img class="card-img-top" src={{this.image}} alt={{this.name}}>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </a>
          <div class="card-footer">
            <div class="d-flex justify-content-end">
              <form action="/restaurants/{{{this.id}}}/edit" method="GET">
                <button type="submit" class="btn btn-link">Edit</button>
              </form>
              <form action="/restaurants/{{{this.id}}}" method="GET">
                <button type="submit" class="btn btn-link">Detail</button>
              </form>
              <form action="/restaurants/{{{this.id}}}/delete?_method=DELETE" method="POST" class="mr-1"
                onsubmit="return confirm('確定要移除這家餐廳的資訊嗎？');">
                <button type="submit" class="btn btn-warning">Delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>